<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}
    <link href="{{ asset('/css/style.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body>
    {% if (app.user) %}
    <header>
        {% block header %}
        <nav>
            <div class="navBox">
                <div class="navWrapper">
                    <a href="">
                        <div id="instaNav"></div>
                    </a>
                    <input type="search" placeholder="Rechercher">
                    <div class="iconMenu">
                        <a href="">
                            <div id="home"></div>
                        </a>
                        <a href="">
                            <div id="chat"></div>
                        </a>
                        <a href="">
                            <div id="compass"></div>
                        </a>
                        <a href="">
                            <div id="like"></div>
                        </a>
                        <div id="panel" class="speechBubble">
                            <div class="thumbnailBoxPanel">
                            {% if app.user.thumbnail %}
                                <img id="panelThumbnail" height="22px" width="22px" src="../assets/thumbnails/{{ app.user.thumbnail }}"
                                    alt="Photo de profil">
                                {% else %}
                                <img id="panelThumbnail" height="22px" width="22px" src="{{ asset('/assets/defaultThumbnail.jpg') }}" alt="Photo de profil par défaut">
                            {% endif %}
                            </div>
                            <div id="panelMenu" class="menuToggle" >
                                <a href="" class="profil"><div id="thumbnailMenu"></div>Profil</a>
                                <a href="" class="checkedIn"><div id="checkedIn"></div>Enregistré</a>
                                <a href="" class="setting"><div id="setting"></div>Paramètres</a>
                                <a href="" class="switchAccount"><div id="switchAccount"></div>Changer de compte</a>
                                <a href="{{ path('app_logout') }}" class="dc">Déconnexion</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        {% endblock %}
    </header>
    {% endif %}


    {% block body %}{% endblock %}
    {% block javascripts %}
    <script src="{{ asset('/js/main.js') }}"></script>
    {% endblock %}
</body>

</html>